<?xml version="1.0"?>
<flex-config xmlns="http://www.adobe.com/2006/flex-config">

	<compiler>
    	<external-library-path>
      		<path-element>${playerglobal.lib.dir}</path-element>
    	</external-library-path>
    	<library-path append="true">
    		<path-element>${as3flobile.lib.dir}</path-element>
    	</library-path>
    	<source-path>
      		<path-element>${src.dir}</path-element>
    	</source-path>
  	</compiler>
  	
  	<include-sources includes="**/*">
  		<path-element>${src.dir}</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/controls</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/debug</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/enum</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/helper</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/model</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/skin</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/util</path-element>
    </include-sources>
  	
  	<output>${lib.bin.dir}/${lib.name}.swc</output>
  	
  	<metadata>
    	<creator>Todd Anderson</creator>
    	<description>http://github.com/bustardcelly/as3flobile-android</description>
    	<language>EN</language>
    	<title>External AS3 Library that is compiled against as3flobile to deliver Android look-and-feel for controls.</title>
  	</metadata>
  	
</flex-config>